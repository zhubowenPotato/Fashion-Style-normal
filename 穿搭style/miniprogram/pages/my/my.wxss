@import "/utils/common.wxss";

.navigator-hover button {
  background-color: #fd6e5e;
}
.page {
  padding: 0 3%;
}
.other-navigator-hover button {
  background-color: #fd6e5e;
}

.g-bda-userinfo {
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头像按钮样式 */
.avatar-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.avatar-btn::after {
  border: none;
}

.userinfo-avatar {
  width: 70px;
  height: 70px;
  margin: 20rpx;
  margin-bottom: 6rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  display: block;
}

/* 昵称输入框样式 */
.nickname-input {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin: 10rpx 0;
  min-width: 200rpx;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}
.i-header{
  height: 350rpx;
  text-align: center;
  width: 95%;
  margin: 15px auto;
  border-radius: 20px;
  box-shadow:0 5px 20px 0 #FDDFD7, 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  /* box-shadow: 0px 10px 15px  #FDDFD7; */
  background-image: linear-gradient(90deg,#FD6E5E,#FC8B3A);
}
.userinfo-nickname{
  color: #fff;
}

/* 风格标签选择区域 */
.tags-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  padding: 32rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #8a8a8a;
  line-height: 1.4;
}

.tags-container {
  padding: 24rpx 32rpx 32rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  position: relative;
  padding: 16rpx 24rpx;
  background: #f7f8fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #4a4a4a;
  border: 2rpx solid #f0f0f0;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.tag-item:active {
  transform: scale(0.98);
}

.tag-item.selected {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.tag-item.custom-tag {
  background: #e8f4fd;
  color: #1976d2;
  border-color: #bbdefb;
}

.tag-item.custom-tag.selected {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
}

.tag-item.add-tag {
  background: #fff;
  color: #07c160;
  border: 2rpx dashed #07c160;
  justify-content: center;
  min-width: 160rpx;
}

.tag-item.add-tag:active {
  background: #f0f9f4;
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 删除按钮样式 */
.tag-delete-btn {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 28rpx;
  height: 28rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  line-height: 1;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
}

.tag-delete-btn:active {
  transform: scale(0.9);
  background: #ff3742;
}

/* 添加标签弹窗 */
.add-tag-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: all 0.3s ease;
}

.add-tag-modal.show {
  display: flex;
  opacity: 1;
}

/* AI识别结果弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.ai-result-modal {
  width: 640rpx;
  max-height: 70vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

