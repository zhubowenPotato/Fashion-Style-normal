/* 小铺页面样式 */
.shop-header {
  background: linear-gradient(135deg, #fd6e5e, #ff8a80);
  padding: 30px 20px;
  text-align: center;
  color: white;
}

.header-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 8px;
}

.header-subtitle {
  font-size: 14px;
  opacity: 0.9;
}

/* 分类筛选 */
.category-filter {
  background: white;
  border-bottom: 1px solid #f0f0f0;
  padding: 15px 0;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 15px;
}

.category-item {
  display: inline-block;
  padding: 8px 16px;
  margin-right: 10px;
  background: #f5f5f5;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #fd6e5e;
  color: white;
}

/* 商品列表 */
.shop-list {
  padding: 15px;
  background: #f8f8f8;
  min-height: calc(100vh - 200px);
}

.shop-item {
  margin-bottom: 15px;
}

.shop-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.2s ease;
}

.shop-card:active {
  transform: scale(0.98);
}

.shop-image {
  position: relative;
  height: 120px;
  overflow: hidden;
}

.shop-img {
  width: 100%;
  height: 100%;
}

.shop-badge {
  position: absolute;
  top: 10px;
  right: 10px;
  background: rgba(253, 110, 94, 0.9);
  color: white;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
}

.shop-info {
  padding: 15px;
}

.shop-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.shop-desc {
  font-size: 13px;
  color: #666;
  margin-bottom: 10px;
  line-height: 1.4;
}

.shop-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.rating {
  display: flex;
  align-items: center;
}

.star {
  color: #ffd700;
  font-size: 14px;
  margin-right: 4px;
}

.rating-text {
  font-size: 13px;
  color: #666;
}

.sales {
  font-size: 13px;
  color: #999;
}

.shop-action {
  text-align: center;
}

.taobao-btn {
  background: linear-gradient(135deg, #fd6e5e, #ff8a80);
  color: white;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
  display: inline-block;
  transition: all 0.3s ease;
}

.taobao-btn:active {
  background: linear-gradient(135deg, #e55a4a, #e67a70);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #999;
}

.empty-image {
  width: 80px;
  height: 80px;
  opacity: 0.3;
  margin-bottom: 15px;
}

.empty-text {
  font-size: 14px;
}