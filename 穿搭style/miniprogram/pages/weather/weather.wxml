<!-- 小铺页面 -->
<view class="shop-header">
  <view class="header-title">精选小铺</view>
  <view class="header-subtitle">发现更多时尚好店</view>
</view>

<!-- 分类筛选 -->
<view class="category-filter">
  <scroll-view class="category-scroll" scroll-x="true">
    <view class="category-list">
      <view 
        wx:for="{{categories}}" 
        wx:key="index" 
        class="category-item {{selectedCategory === item ? 'active' : ''}}"
        data-category="{{item}}"
        bindtap="filterCategory"
      >
        {{item}}
      </view>
    </view>
  </scroll-view>
</view>

<!-- 商品列表 -->
<view class="shop-list">
  <view 
    wx:for="{{shopList}}" 
    wx:key="id" 
    class="shop-item"
    wx:if="{{selectedCategory === '全部' || item.category === selectedCategory}}"
  >
    <view class="shop-card" data-url="{{item.taobaoUrl}}" bindtap="goToTaobao">
      <view class="shop-image">
        <image src="{{item.image}}" mode="aspectFill" class="shop-img"></image>
        <view class="shop-badge">{{item.category}}</view>
      </view>
      <view class="shop-info">
        <view class="shop-name">{{item.name}}</view>
        <view class="shop-desc">{{item.description}}</view>
        <view class="shop-stats">
          <view class="rating">
            <text class="star">★</text>
            <text class="rating-text">{{item.rating}}</text>
          </view>
          <view class="sales">销量 {{item.sales}}</view>
        </view>
        <view class="shop-action">
          <view class="taobao-btn">进入店铺</view>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 空状态 -->
<view wx:if="{{shopList.length === 0}}" class="empty-state">
  <image src="https://gitee.com/huanchi/wear_fashionstyle/raw/master/image/wear.png" class="empty-image"></image>
  <view class="empty-text">暂无商品</view>
</view>