.container {
    padding: 40rpx;
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.header {
    text-align: center;
    margin-bottom: 80rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}
 
.content {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    margin-bottom: 60rpx;
    text-align: center;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
 
.content1 {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}

.content text {
    display: block;
    color: #666;
    font-size: 28rpx;
    line-height: 1.6;
}
 
.bottom {
    border-radius: 50rpx;
    margin: 0 50rpx;
    font-size: 32rpx;
    background: linear-gradient(45deg, #07c160, #38d9a9);
    color: white;
    border: none;
    box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.tips {
    margin-top: 40rpx;
    text-align: center;
}

.tips text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 24rpx;
}

/* 用户信息设置区域样式 */
.user-info-section {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24rpx;
    padding: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 600rpx;
}

.avatar-section, .nickname-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
}

.avatar-section:last-child, .nickname-section:last-child {
    margin-bottom: 0;
}

.label {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
    font-weight: 500;
}

/* 头像按钮样式 */
.avatar-btn {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
}

.avatar-btn::after {
    border: none;
}

.avatar-preview {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 3px solid #07c160;
    display: block;
}

/* 昵称输入框样式 */
.nickname-input {
    background: #f8f9fa;
    border: 2px solid #e9ecef;
    border-radius: 20rpx;
    padding: 20rpx 30rpx;
    color: #333;
    font-size: 28rpx;
    text-align: center;
    width: 100%;
    max-width: 400rpx;
    transition: all 0.3s ease;
}

.nickname-input:focus {
    border-color: #07c160;
    background: #fff;
    box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.nickname-input::placeholder {
    color: #999;
}
