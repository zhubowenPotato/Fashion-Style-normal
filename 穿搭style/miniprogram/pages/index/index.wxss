/* pages/index/index.wxss */

/* 每日推荐主容器 */
.daily-recommend-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #ffeef8 0%, #f8e8f0 100%);
  min-height: 100vh;
}

/* 顶部信息栏 */
.info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.location-info, .weather-info {
  display: flex;
  align-items: center;
}

.location-info, .weather-info {
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.location-info:active, .weather-info:active {
  opacity: 0.7;
}

.location-icon, .weather-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.location-text, .weather-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.refresh-icon {
  font-size: 24rpx;
  margin-left: 8rpx;
  opacity: 0.6;
  transition: transform 0.3s ease;
}

.location-info:active .refresh-icon {
  transform: rotate(180deg);
}

/* 推荐标题区域 */
.recommend-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.recommend-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-bottom: 10rpx;
}

.recommend-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 推荐内容区域 */
.recommend-content {
  margin-bottom: 40rpx;
}

/* 无推荐状态 */
.no-recommendation {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.no-recommendation-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.no-recommendation-text {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.no-recommendation-desc {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 推荐卡片 */
.recommendation-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.recommendation-image {
  position: relative;
  height: 500rpx;
}

.outfit-image {
  width: 100%;
  height: 100%;
}

.recommendation-overlay {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.recommendation-style {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

.recommendation-info {
  padding: 30rpx;
}

.recommendation-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-bottom: 10rpx;
}

.recommendation-desc {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.recommendation-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.generate-btn, .refresh-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
}

.generate-btn[disabled] {
  background: #bdc3c7;
  color: #7f8c8d;
}

.refresh-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #2c3e50;
  border: 2rpx solid #e0e0e0;
}

/* 快速操作区域 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  transition: background-color 0.3s;
}

.quick-action-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.quick-action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.quick-action-text {
  font-size: 24rpx;
  color: #ff6b9d;
  font-weight: 500;
}